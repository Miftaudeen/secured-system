@model SecuredSystem.Models.Customer
@using SecuredSystem.Models
@{
    ViewBag.Title = "Details";
}

<h2>@Model.FirstName+" "+@Model.Surname +" "+Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Occupation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Occupation)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NextOfKin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NextOfKin)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PIN)
        </dd>

    </dl>
    <p>
        @Html.ActionLink("Add Complaint for " + @Model.FirstName + " " + @Model.Surname, "Create", "Complaint")
    </p>
    <table class="table table-bordered table-responsive table-condensed">
        <thead>
            <tr>
                <td>Complain</td>
                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Complaints)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => item.description)
                    </td>
                    <td class="@(item.Flag == @Flag.Urgent ? "yellow" : item.Flag == @Flag.Normal ? "orange" : "green")">
                        @Html.DisplayFor(model => item.Flag)
                    </td>
                    
                </tr>
                
            }

        </tbody>
    </table>
</div>
<p>
    
          @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerId }) |
          @Html.ActionLink("Back to List", "Index")</p>
